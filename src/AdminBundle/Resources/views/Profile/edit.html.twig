{% extends "admin-layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block page_title %}Edit Profile  {% endblock %}
{% block page_subtitle %} {{ app.user.getName() }} {% endblock %}

{% block page_content %}
<div class="row">
	<div class="col-md-6">
		<div class="box box-primary">
			{{ form_start(form, { 'action': path('admin_profile_edit'), 'attr': { 'class': 'admin_profile_edit'} }) }}
				<div class="box-body">
			    	{{ form_widget(form) }}
			    </div>
			    <!-- End of box-body-->
			    <div class="box-footer">
			        <input type="submit" value="{{ 'profile.edit.submit'|trans }} profile" name="submit" class="btn btn-success" />
			        <a class="btn btn-danger pull-right" href="{{ path('admin_profile_show') }}">Cancel </a>
			    </div>
			    <!-- End of box-footer-->
			{{ form_end(form) }}
		</div> <!-- End of box-primary -->
	</div> <!-- end of col-md-6 -->
</div> <!-- End of Row -->
{% endblock %}